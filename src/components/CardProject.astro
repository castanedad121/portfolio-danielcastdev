---
import FolderCodeIcon from '../icons/FolderCode.astro'
import AppWindowIcon from '../icons/AppWindow.astro'

interface Props {
    title: string
    description: string
    github?: string
    image: string
    video: string
    deploy?: string
    repository?: string
    tags: {name:string, icon:string, class:string}[]
}
const {title, video, description, image, deploy, repository, tags} = Astro.props


---

<div class="w-full rounded-lg  bg-gray-900/15 border  border-white/10 flex justify-center items-center flex-col p-4">
    <video controls src={video} class="p-x-4 rounded-md" poster={image} ></video>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-xl sm:text-2xl font-bold tracking-tight text-white">{title}</h5>
        </a>
        <p class="mb-3 text-sm  text-gray-400">{description}</p>
        <div class="flex gap-x-4 justify-center flex-wrap gap-y-3">
               
                {
                    repository ?
                    <a href={repository} class="inline-flex items-center px-2 py-1 sm:px-3 sm:py-2 text-sm font-light sm:font-normal text-center text-white  rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" >
                    Repositorio
                    <FolderCodeIcon class="size-5 ml-2" />                 
                </a>
                : <></>
                }
                
            {
                deploy ?
                <a href={deploy} target="_blank"
                rel="noopener noreferrer" class="inline-flex items-center px-2 py-1 sm:px-3 sm:py-2 text-sm font-light sm:font-normal text-center text-white  rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" >
                Sitio Web
                <AppWindowIcon class="size-5 ml-2" />
            </a>
            : <></>
            }
            
        </div>
        <hr class="my-4"/>
        <div class="flex justify-center rounded-md shadow-sm">
            {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class} `}
                  >
                    <tag.icon  />
                    {tag.name}
                  </span>
                </li>
                <span class="inline-flex gap-x-2 items-center px-4 py-2 text-sm font-medium border  rounded-s-lg  bg-gray-600 border-green-600 text-green-400">
                
                
                <span class="hidden sm:block">Profile</span> 
            </span>
              ))}
    
          </div>
    </div>
</div>
